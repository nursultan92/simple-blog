{% extends "::base.html.twig" %}
{% block body %}
    <a href="{{ path('nurolopher_blog_user_new') }}" class="pull-right btn btn-primary">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Number</th>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Action</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('nurolopher_blog_user_show',{'id': user.id}) }}">{{ user.email }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td><a href="{{ path('nurolopher_blog_user_edit',{'id':user.id}) }}">Edit</a></td>
                <td><a href="{{ path('nurolopher_blog_user_delete',{id:user.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}