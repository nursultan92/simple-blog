{% extends "::base.html.twig" %}
{% block body %}
    {{ form(form) }}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('nurolopher_blog_post_new') }}">Create new post</a>
    {% endif %}
    <ul>
        {% for post in posts %}
            <li>
                {{ include('@NurolopherBlog/Post/post_content.html.twig') }}
            </li>
        {% endfor %}
    </ul>
    {% if not posts.isFirstPage %}
        <a href="?page={{ posts.firstPage }}">First page</a>
    {% endif %}
    {% for page in posts.links %}
        {#{% if page != posts.lastIndex or page != posts.firstPage%}#}
        <a href="?page={{ page }}">{{ page }}</a>
        {#{% endif %}#}
    {% endfor %}
    {% if not posts.isLastPage %}
        <a href="?page={{ posts.lastPage() }}">Last page</a>
    {% endif %}
{% endblock %}